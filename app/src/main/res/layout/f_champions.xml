<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data class = "TestDataBind">
        <variable
            name="tvm"
            type="com.i550.qstats.TestViewModel"/>
        <variable
            name="vm"
            type="com.i550.qstats.MyViewModel"/>
    </data>
<LinearLayout
    android:id="@+id/viewRoot"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global"        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Champions Usage:"/>
    <TextView
        android:id="@+id/textview_global_tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{vm.dataGlobal.total_championusage}'/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Deaths:"/>
    <TextView
        android:id="@+id/textview_global_td"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{tvm.test.jopa}'/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Champions Usage:"/>
    <TextView
        android:id="@+id/textview_global_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{}'/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Deaths:"/>
    <TextView
        android:id="@+id/textview_global_cd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{}'/>
    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="plus14"
        android:onClick='@{(view)->tvm.updateTest()}'/>
</LinearLayout>
</layout>